<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
<LinearLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/customDlg_tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="15dp"
        android:text="提示"
        android:textColor="@color/dialog_title_text"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/customDialog_tvSeparator0"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/dialog_title_separator" />

    <TextView
            android:id="@+id/customDlg_tvInfo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/dialog_message_text"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>
	<!-- 不再提示复选框 -->
    <CheckBox
	        android:id="@+id/customDialog_chkNoRepeat"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@null"
	        android:button="@null"
	        android:gravity="left"
	        android:layout_marginTop="15dp"
	        android:paddingLeft="15dp"
	        android:drawableLeft="@drawable/checkbox_bg"
	        android:textColor="@color/dialog_button_text"/>
	<TextView
	    android:id="@+id/customDialog_tvSeparator1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dip"
        android:background="@color/dialog_button_separator" />
    <LinearLayout
        android:id="@+id/customDialog_llytButtons"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
	    <Button
	        android:id="@+id/customDlg_btnPositive"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:textColor="@color/dialog_button_text"
	        android:background="@drawable/dialog_message_button"/>
	    <TextView
	        android:id="@+id/customDialog_tvSeparator2"
	        android:layout_width="1dp"
	        android:layout_height="30dp"
	        android:layout_gravity="center"
	        android:background="@color/dialog_button_separator" />

		<Button
		    android:id="@+id/customDlg_btnNatural"
		    android:layout_width="0dp"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:textColor="@color/dialog_button_text"
		    android:background="@drawable/dialog_message_button"/>
		<TextView
		    android:id="@+id/customDialog_tvSeparator3"
	        android:layout_width="1dp"
	        android:layout_height="30dp"
	        android:layout_gravity="center"
	        android:background="@color/dialog_button_separator" />
		<Button
		    android:id="@+id/customDlg_btnNagative"
		    android:layout_width="0dp"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:textColor="@color/dialog_button_text"
		    android:background="@drawable/dialog_message_button"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>